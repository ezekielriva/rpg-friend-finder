<table class="table">
  <thead>
    <tr></tr>
  </thead>
  <tbody>
    <% games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= link_to fa_icon("trash"), [@group, game], method: :delete, data: {confirm: "Are you sure?"} if policy(@group).edit? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
