<%= form_for (@filter || :filter), url: groups_path, method: :get do |f| %>
  <div class="form-group">
    <%= f.label :by_name, "Name" %>
    <%= f.text_field :by_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :by_games, "Which game would you like to play?" %>
    <%= f.collection_select :by_games, @games, :id, :to_s, {include_blank: false}, {class: "form-control select2", multiple: true} %>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= link_to "Clear", groups_path, class: "btn btn-danger btn-block" %>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.submit :Filter, class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
<% end %>
