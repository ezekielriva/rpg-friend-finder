<div class="row">
  <div class="col-sm-3">
    <%= render "filter" %>
  </div>
  <div class="col-sm-9">
    <div class="box box-default">
      <div class="box-header with-border">
        <i class="fa fa-users"></i>
        <h3 class="box-title"><%= t("title.groups") %></h3>
        <%= link_to new_group_path, class: "btn btn-xs btn-primary btn-flat pull-right" do %>
          <i class="fa fa-plus"></i>
          <%= t(".new") %>
        <% end if policy(:group).new? %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th><%= t(".name") %></th>
            <th><%= t(".encounter_point") %></th>
            <th><%= t(".no_members") %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @groups.decorate.each do |group| %>
            <tr>
              <td><%= group.name %></td>
              <td><%= group.encounter_point %></td>
              <td><%= group.members_no %></td>
              <td><%= link_to fa_icon("eye"), group %></td>
              <td><%= link_to fa_icon("edit"), [:edit, group] if policy(group).edit? %></td>
              <td><%= link_to fa_icon("trash"), group, method: :delete, data: {confirm: t("actions.confirm")}  if policy(group).destroy?  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
