<table class="table">
  <thead>
    <tr></tr>
  </thead>
  <tbody>
    <% members.each do |member| %>
      <tr>
        <td><%= image_tag member.avatar, class: "img-circle" %></td>
        <td><%= member %></td>
        <td><%= link_to fa_icon("trash"), [@group, member], method: :delete, data: {confirm: "Are you sure?"} if policy(@group).edit? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
