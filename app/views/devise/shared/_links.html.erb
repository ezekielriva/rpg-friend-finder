<%- if devise_mapping.omniauthable? %>
  <div class="social-auth-links text-center">
    <p>- <%= t(".or") %> -</p>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-social btn-#{provider} btn-flat" do%>
        <i class="fa fa-<%= provider %>"></i>
        <%= t(".sing_in_with", provider: provider.to_s.titleize) %>
      <% end %>
    <% end -%>
  </div><!-- /.social-auth-links -->
<% end -%>

<%- if controller_name != 'sessions' %>
  <%= link_to t(".new_session"), new_session_path(resource_name), class: "text-center" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t(".new_registration"), new_registration_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t(".forgot_password"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t(".new_confirmation"), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t(".new_unlock"), new_unlock_path(resource_name) %><br />
<% end -%>
