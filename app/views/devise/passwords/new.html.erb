<% content_for :devise_page, "login-page" %>
<div class="login-box">
  <div class="login-logo">
    <%= link_to root_path do %>
      <b>TableTop</b> Friend Finder
    <% end %>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg"><%= t(".msg") %></p>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <% if flash[:notice] %>
        <div class="alert alert-info"> <%= flash[:notice] %> </div>
      <% end %>
      <%= devise_error_messages! %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, placeholder: t(".placeholder.email"), class: "form-control" %>
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <%= f.submit t(".send_password"), class: "btn btn-primary btn-block btn-flat" %>
        </div><!-- /.col -->
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->
